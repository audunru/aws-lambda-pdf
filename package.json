{
  "name": "aws-lambda-pdf",
  "version": "0.0.1",
  "description": "Create PDFs using Amazon Lambda functions",
  "scripts": {
    "commit": "cz",
    "prepackage": "npm-run-all typecheck lint test",
    "package": "npm run build",
    "prebuild": "rimraf dist",
    "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --minify --platform=node --target=node18 --packages=external --sourcemap",
    "lint": "eslint src",
    "format": "prettier --write src",
    "prepare": "husky",
    "test": "vitest --run",
    "typecheck": "tsc"
  },
  "dependencies": {
    "playwright-aws-lambda": "^0.11.0",
    "playwright-core": "^1.48.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.13.0",
    "@playwright/test": "^1.48.1",
    "@types/aws-lambda": "^8.10.145",
    "@types/eslint__js": "^8.42.3",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1691.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "pdfjs-dist": "^4.7.76",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": "^18.0.0",
    "npm": ">=10.0.0"
  }
}
